{
  "manifest_version": 3,
  "name": "Cargopolo Calculator",
  "version": "1.0.0",
  "description": "Calculator extension for Cargopolo",
  "permissions": ["tabs"],
  "host_permissions": [
    "https://www.iaai.com/*",
    "https://www.copart.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "type": "module",
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}

